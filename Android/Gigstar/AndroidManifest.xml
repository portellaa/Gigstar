<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ua.gigstar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GigstarTheme" >
        
        <uses-library android:name="com.google.android.maps" />
        
        <activity
            android:name=".GigstarActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="GigAboutActivity" />
        <activity android:name="GigDiscoverActivity" />
        <activity android:name="GigFollowActivity" />
        <activity android:name="GigMapActivity" />
        <activity android:name="GigScheduleActivity" />
        <activity android:name="GigSettingsActivity" />
        <activity android:name="GigMoreTabsActivity" />
        <activity android:name=".detailsactivities.GigEventDetails"></activity>
        <activity android:name=".detailsactivities.GigArtistDetails"></activity>
        <activity android:name=".detailsactivities.GigFacebookLogin"></activity>
    </application>

</manifest>